#include <stdio.h>
#include <string.h>
int main(){
	char word[100],space;
	int len,i;
	while(1)
	{
		scanf("%s",word);
		len=strlen(word);
		for(i=len-1;i>=0;i--)
		{
			printf("%c",word[i]);	
		}
		scanf("%c",&space);
		if(space=='\n');
		{
			printf("\n");
			break;
		}
		printf("%c",space);	
	}
	return 0;
}
